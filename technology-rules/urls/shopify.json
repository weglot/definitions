{
  "$schema": "../schemas/urls.schema.json",
  "title": "Shopify",
  "urls": [
    {
      "condition": [
        {
          "type": "TECHNOLOGY_ID",
          "payload": 2
        }
      ],
      "value": [
        {
          "original": "^/(?:[\\d]{4,})/checkouts/(?:[\\w]{32})(/.*)?$",
          "formatted": "/checkouts$1"
        },
        {
          "original": "^/account/(orders|activate)/(?:[\\w]{32})$",
          "formatted": "/account/orders/"
        },
        {
          "original": "^/wallets/checkouts/(?:.*)$",
          "formatted": "/wallets/checkouts/"
        },
        {
          "original": "^/(.+)\\.(json|xml)$",
          "formatted": "/$1"
        }
      ]
    }
  ]
}
