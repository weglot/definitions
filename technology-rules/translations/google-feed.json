{
  "$schema": "../schemas/translations.schema.json",
  "title": "Google shopping feeds",
  "translations": [
    {
      "type": "XML",
      "condition": [
        {
          "type": "XML_ATTRIBUTE_VALUE",
          "payload": {
            "path": "//feed",
            "attr": "xmlns:g",
            "value": "http://base.google.com/ns/1.0"
          }
        },
        {
          "type": "XML_ATTRIBUTE_VALUE",
          "payload": {
            "path": "//rss",
            "attr": "xmlns:g",
            "value": "http://base.google.com/ns/1.0"
          }
        },
        {
          "type": "XML_ATTRIBUTE_VALUE",
          "payload": {
            "path": "//g:rss",
            "attr": "xmlns:g",
            "value": "http://base.google.com/ns/1.0"
          }
        }
      ],
      "entryContext": "entry",
      "value": [
        {
          "paths": [
            "//title",
            "//title_org",
            "//description",
            "//category1_title",
            "//category1_breadcrumbs",
            "//category2_title",
            "//category2_breadcrumbs",
            "//variant_title",
            "//g:material",
            "//g:brand",
            "//g:color",
            "//g:title",
            "//g:description",
            "//g:condition",
            "//g:availability",
            "//g:product_type",
            "//g:sex",
            "//g:custom_label_0",
            "//g:google_product_category"
          ],
          "wordType": 1
        },
        {
          "paths": ["//link", "//category1_url", "//category2_url"],
          "type": "URL",
          "forceURLFormat": "siteSettings"
        },
        {
          "paths": ["//g:image_link", "//g:additional_image_link"],
          "wordType": 6
        }
      ]
    }
  ]
}
